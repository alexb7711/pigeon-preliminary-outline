# MAKEFILE FOR DOCS

##===============================================================================
# Variables
IMGDIR = ./img
SRC   := $(wildcard *.org)
UML   := $(wildcard $(IMGDIR)/*.puml)
PNG   := $(patsubst %.puml, %.png, $(UML))
PDF   := $(patsubst %.org, %.pdf, $(SRC))

##===============================================================================
# Recipes

##-------------------------------------------------------------------------------
#
all: pdf

##-------------------------------------------------------------------------------
#
png: $(PNG)
	make -j4 -C $(IMGDIR) png

##-------------------------------------------------------------------------------
#
pdf: $(PDF)

##-------------------------------------------------------------------------------
#
clean:
	rm -f $(PDF) $(PNG)

##===============================================================================
#

##-------------------------------------------------------------------------------
#
%.pdf: %.org
	emacs -Q --script build-paper.el

##-------------------------------------------------------------------------------
#
%.png: %.puml
	@
